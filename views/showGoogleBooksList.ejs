<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/head') %>
    
</head>
<body>
    <header>
        <%- include ('partials/header') %>
    </header>
    
    
    <div class="container" style="margin-top:30px">
        <p><%= message %></p>
        <form class="form-check" action="/getDetails" method="POST">
            <ul><% for (var i = 0; i < result.items.length; i++)  { %>
                <input type="radio" class="form-check-input" name="id" value="<%= result.items[i].id %>">
                    <strong><%= result.items[i].volumeInfo.title %></strong> by 
                    <%= result.items[i].volumeInfo.authors %><br>
                <% } %>
            </ul>
            <input type="hidden" name="inDB" value="d-block">
            <input class=" btn btn-outline-primary" type="submit" value="Details">
        </form>
    </div>

    <footer>
        <%- include ('partials/footer') %>
    </footer>
</body>
</html>