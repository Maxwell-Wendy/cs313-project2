<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/head') %>
    
</head>
<body>
    <header>
        <%- include ('partials/header') %>
    </header>

    <div class="container" style="margin-top:30px">
        <h3>I would like to search my personal catalog by title.</h3>
        <form class="form-group" action="/getBook" method="POST">
            <input type="hidden" value="" name="search">
            <input type="hidden" value="title" name="searchBy">
            <input type="text" list="title-datalist" id="titles" name="searchText">  
            <datalist id="title-datalist">
                <% result.forEach((result, index)=>{%>
                    <option id=<%= result.googleid %>><%= result.title %></option>
                <% }) %>    
            </datalist>
            <input type="submit" class="btn btn-outline-primary" value="Search">
        </form>
    </div>

    <div class="container" style="margin-top:30px">
        <h3>I would like to search my personal catalog by author.</h3>
        <form class="form-group" action="/getBook" method="POST">
            <input type="hidden" value="" name="search">
            <input type="hidden" value="author" name="searchBy">
            <input type="text" list="author-datalist" id="authors" name="searchText">      
            <datalist id="author-datalist">
                <% result.forEach((result, index)=>{%>
                    <option id=<%= result.googleid %>><%= result.author %></option>
                <% }) %>         
            </datalist>
                    <input type="submit" class="btn btn-outline-primary" value="Search">
                </form>
            </div>

    <footer>
        <%- include ('partials/footer') %>
    </footer>
    
</body>
</html>