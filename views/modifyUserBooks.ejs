<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/head') %>  
</head>
<body>
    <header>
        <%- include ('partials/header') %>
    </header>
    
    <div class="container" style="margin-top:30px">
        <h3>Choose the book you wish to update.</h3>
        <form class="form-group" action="/changeBookDetails" method="POST">
            <input type="hidden" value="" name="search" placeholder="Enter title here">
            <input type="hidden" value="title" name="searchBy">
            <input type="text" list="title-datalist" id="titles" name="searchText">  
            <datalist id="title-datalist">
                <% result.forEach((result, index)=>{%>
                    <option id=<%= result.googleid %>><%= result.title %></option>
                <% }) %>    
            </datalist>

            <div class="form-check">
                
                <input type="checkbox" class="form-check-input" name="isread" value="read">I have read this book.
                <br>
                <input type="checkbox" class="form-check-input" name="isowned" value="owned">I own this book.
                <br>
                <input type="checkbox" class="form-check-input" name="iswishlist" value="wishlist">This book is on my wishlist.
                <br>
                
            </div>
            <div class="form-group">
                <!--Last date read: <input type="date" name="dateread"> -->
            </div>
            <input type="submit" class="btn btn-outline-primary" value="Update">
        </form>
    </div>

    <%- include ('partials/catalog') %>
    <footer>
        <%- include ('partials/footer') %>
    </footer>
    
</body>
</html>