
<div class="container" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-6">
                <h3>Sign In to Your Book Catalog</h3>
                <form class="from-group" action="/login" method="POST">
                    <label>Username</label><br>
                    <input type="text" name="username" placeholder="Username"><br><br>
                    <label>Password</label><br>
                    <input type="password" name="password" placeholder="Password"><br><br>
                    <input type="submit" class="btn btn-outline-primary" value="Sign In"><br>
            </form>
        </div>
        <div class="col-sm-6">
                <h3>Or Sign Up as a New User</h3>
                <form class="from-group" action="/signup" method="POST">
                    <label>Username</label><br>
                    <input type="text" name="username" placeholder="Username"><br><br>
                    <label>Password</label><br>
                    <input type="password" name="password" placeholder="Password"><br><br>
                    <input type="submit" class="btn btn-outline-primary" value="Sign Up"><br>
                </form>
        </div>
    </div>
</div>
