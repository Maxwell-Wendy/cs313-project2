<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/head') %>
</head>
<body>
    <header>
        <%- include ('partials/header') %>
    </header>

    <div class="container" style="margin-top:30px">
        <p><%= message %></p>
        <p>Select a book to see more details.</p>

        <form class="form-check" action="/getDetails" method="POST">
            <ul><% for (var i = 0; i < result.length; i++)  { %>
                <input type="radio" class="form-check-input" name="id" value="<%= result[i].googleid %>">
                    <strong><%= result[i].title %></strong> by <%= result[i].author %><br>
                <% } %>
            </ul>
            <input type="hidden" name="inDB" value="d-none">
            <input class="btn btn-outline-primary" type="submit" value="Details">
        </form>
    </div>

    <%- include ('partials/catalog') %>

    <footer>
        <%- include ('partials/footer') %>
    </footer>
</body>
</html>